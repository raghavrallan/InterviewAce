# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Choose your AI provider: "openai" or "azure"
AI_PROVIDER=openai

# =============================================================================
# AZURE OPENAI CONFIGURATION (when AI_PROVIDER=azure)
# =============================================================================
# Get these from Azure Portal > Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_MODEL=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# OPENAI CONFIGURATION (when AI_PROVIDER=openai)
# =============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# LIVEKIT CONFIGURATION (OPTIONAL - Using Web Speech API instead)
# =============================================================================
LIVEKIT_API_KEY=optional
LIVEKIT_API_SECRET=optional
LIVEKIT_URL=optional

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure random string for production
JWT_SECRET=your-secure-jwt-secret-here

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
