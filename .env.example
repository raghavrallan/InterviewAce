# AI Service Configuration (Azure OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-endpoint.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_MODEL=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview
# Required by openai library for AzureOpenAI client (same value as above)
OPENAI_API_VERSION=2025-01-01-preview

# Deepgram STT (free tier: $200 credits, no expiry)
# Get your free API key at https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key

# Backend Configuration
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
